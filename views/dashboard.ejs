<h1>Lista de Países Hispanos</h1>

<table class="tabla-paises">
    <thead>
        <tr>
            <th>Num</th> <th>Nombre Oficial</th>
            <th>Capital</th>
            <th>Población</th>
            <th>Área (km²)</th>
            <th>Límites</th> <th>Timezones</th> <th>Gini</th>
        </tr>
    </thead>
    <tbody>
        <% paises.forEach((pais, index) => { %>
            <tr>
                <td><%= index + 1 %></td>

                <td><%= pais.nombreOficial %></td>

                <td><%= pais.capital[0] || '-' %></td>

                <td><%= pais.population.toLocaleString() %></td>

                <td><%= pais.area.toLocaleString() %></td>

                <td>
                    <%= pais.borders && pais.borders.length > 0 ? pais.borders.join(', ') : 'Isla/Sin fronteras' %>
                </td>

                <td>
                    <%= pais.timezones && pais.timezones.length > 0 ? pais.timezones.join(', ') : '-' %>
                </td>

                <td><%= pais.gini ? pais.gini : 'N/A' %></td>
            </tr>
        <% }) %>
    </tbody>
</table>